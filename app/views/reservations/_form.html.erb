<div class="panel panel-default">
    <div class="panel-heading">
        <span><i class="fa fa-bolt" style="color: #ffb400"></i> £<%= @venue.price %></span>
        <span class="pull-right">Per Hour</span>
    </div>
    <div class="panel-body">
        <%= form_for([@venue, @venue.reservations.new]) do |f| %>
        <div class="row">
            <div class="col-md-6">
                <label>Start</label>
                <%= f.text_field :start_date, readonly: true, placeholder: "Start", class: "form-control datepicker" %>                
            </div>
            <div class="col-md-6">
                <label>End</label>                    
                <%= f.text_field :end_date, readonly: true, placeholder: "End", class: "form-control datepicker", disabled: true %>                                    
            </div>
        </div>      
        <div id="preview" style="display: none">
            <table class="reservation-table">
                <tbody>
                    <tr>
                        <td>Price</td>
                        <td class="text-right">£<%= @venue.price %></td>
                    </tr>
                    <tr>
                        <td>Hour(s)</td>
                        <td class="text-right">x <span id="reservation_days"></span></td>
                    </tr>     
                    <tr>
                        <td class="total">Total</td>
                        <td class="text-right">£<span id="reservation_total"></span></td>
                    </tr>
                </tbody>
            </table>
        </div>  
        <br/>
        <%= f.submit "Book Now", class: "btn btn-normal btn-block"%>
        <% end %>
    </div>
</div>



<script>
    $(function() {
        $('#reservation_start_date').datepicker({
            dateFormat: 'dd-mm-yy'
        });
        $('#reservation_end_date').datepicker({
            dateFormat: 'dd-mm-yy'
        });
    });
</script>