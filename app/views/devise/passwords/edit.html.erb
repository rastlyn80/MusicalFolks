<div class="row">
  <div class="col-md-4 col-md-offset-4">

    <h2>Change your password</h2>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
    <%= render "shared/devise-message" %>
      <%= f.hidden_field :reset_password_token %>


      <div class="form-group">
        <% if @minimum_password_length %>
          <%= f.password_field :password, autocomplete: "off", placeholder: "New Password ("+ @minimum_password_length.to_s + " characters minimum)" , class: "form-control" %>
        <% else %>
          <%= f.password_field :password, autocomplete: "off", placeholder: "New Password" , class: "form-control" %>
        <% end %>
      </div>

      <div class="form-group">
          <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "Confirm New Password" , class: "form-control" %>
      </div>

      <div class="actions">
        <%= f.submit "Change my password", class: "btn btn-primary" %>
      </div>
    <% end %>

  </div>
</div>