<div class="row">
    <div class="col-md-3">
      <%= render 'venue_menu' %>
    </div>
    <div class="col-md-9">
      <div class="panel panel-default">
          <div class="panel-heading">
              Description
          </div>
          <div class="panel-body">
              <div class="container">

                <%= form_for @venue do |f| %>
                  <div class="row">
                      <div class="form-group">
                          <label>Listing Name</label>
                          <%= f.text_field :listing_name, placeholder: "Name of your Listing", class: "form-control" %>
                      </div>
                  </div>
                 <div class="row">
                      <div class="form-group">
                          <label>Listing Description</label>
                          <%= f.text_area :description, rows: 5, placeholder: "Describe your venue", class: "form-control" %>
                      </div>
                  </div>
                  <div class="text-center">
                      <%= f.submit "Save", class: "btn btn-form" %>
                  </div>

                <% end %>

              </div>
          </div>
      </div>
    </div>
</div>