<div class="row">
    <div class="col-md-3">
      <%= render 'venue_menu' %>
    </div>
    <div class="col-md-9">
      <div class="panel panel-default">
          <div class="panel-heading">
              Amenities
          </div>
          <div class="panel-body">
              <div class="container">
                <%= form_for @venue do |f| %>
                  <div class="row form-group">
                      <div class="col-md-4">
                          <%= f.check_box :has_recording %> Recording Equipment
                      </div>
                      <div class="col-md-4">
                          <%= f.check_box :has_wifi %> WiFi Connection
                      </div>
                      <div class="col-md-4">
                          <%= f.check_box :has_heating %> Heating
                      </div>
                      <div class="col-md-4">
                          <%= f.check_box :has_conditioning %> Air Conditioning
                      </div>
                      <div class="col-md-4">
                        <%= f.check_box :hosts_events %> Hosts Events (TO BE MOVED)
                      </div>
                  </div>
                  <br/><br/>

                  <div class="text-center">
                      <%= f.submit "Save", class: "btn btn-form" %>
                  </div>
                <% end %>

              </div>
          </div>
      </div>
    </div>
</div>