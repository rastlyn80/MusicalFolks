<% venues.each do |venue| %>
    <div class="col-md-4">
        <div class="panel panel-default">
            <div class="panel-heading preview">
                <%= image_tag venue.cover_photo(:medium) %>
            </div>
            <div class="panel-body">
                <%= link_to venue.listing_name, venue %><br/>
                Â£<%= venue.price %> - <%= venue.venue_type %> - <%= pluralize(venue.max_guests, "max guest") %>
                <div id="star_<%= venue.id %>"></div><%= pluralize(venue.guest_reviews.count, "review") %>
            </div>
        </div>
    </div>

    <script>
            $('#star_<%= venue.id %>').raty({
              path: '/assets',
              readOnly: true,
              score: <%= venue.average_rating %>
            });
    </script>

<% end %>


